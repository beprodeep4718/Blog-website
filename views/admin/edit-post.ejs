<form action="/edit-post/<%= data._id %>?_method=PUT" method="post">
    <label for="title"><b>Title</b></label>
    <input type="text" name="title" placeholder="Title...." value="<%= data.title %>">

    <label for="title"><b>Description</b></label>
    <textarea name="body" cols="50" rows="10"><%= data.body %></textarea>

    <button type="submit" value="update" class="btn">Update</button>
</form>